# Configuration de production pour le syst√®me d'analyse d'intelligence

# Database Configuration
DATABASE_URL=postgresql://your-production-db-url-here
PGPORT=5432
PGUSER=production_user
PGPASSWORD=strong_secure_password
PGDATABASE=intelligence_production
PGHOST=production-host

# Security Configuration
SECRET_KEY=your-very-secure-secret-key-for-production
JWT_SECRET_KEY=your-jwt-secret-key-for-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# API Configuration
API_BASE_URL=https://your-production-domain.com
CORS_ORIGINS=https://your-production-domain.com

# Redis Configuration
REDIS_URL=redis://your-redis-production-url:6379
REDIS_PASSWORD=your-redis-password

# ML/AI Configuration
ML_MODEL_PATH=/app/models
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# Performance Configuration
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
CACHE_TTL=3600

# Monitoring Configuration
LOG_LEVEL=INFO
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# External Services
STIX_TAXII_ENDPOINT=https://your-stix-endpoint.com/taxii
KAFKA_BOOTSTRAP_SERVERS=your-kafka-servers:9092

# Feature Flags
ENABLE_DEEP_LEARNING=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_CLUSTERING=true

# Production Settings
NODE_ENV=production
FLASK_ENV=production
DEBUG=false